# .env.example for safi-mail (Mailcow starter variables)
# Kendi bilgilerinizle doldurun

MAILCOW_HOSTNAME=mail.safi.com
HTTP_PORT=80
HTTPS_PORT=443
TZ=UTC

# Mailcow auto SSL: mailcow uses acme.
# Do not store private secrets here; use admin UI to create users or use the CLI tools.

# Admin UI (ui/)
ADMIN_USER=admin
ADMIN_PASS_HASH=$2a$12$yourbcryptplaceholder
ADMIN_SECRET=change_this_to_a_long_random_string
ADMIN_HOSTNAME=admin.safi.com
NEXT_PUBLIC_ADMIN_URL=https://admin.safi.com
